<div class="page-header">
  <h1>
    Follows
    <a href="/follows/new" class="btn btn-lg btn-success">New Follow</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Participants</th>
        <th>Bet</th>
        <th>Choice</th>
        <th>Actions</th>
      </tr>

      <% @follows.each do |follow| %>
      <tr>
        <td>
          <% if follow.user.present? %>
            <a href="/users/<%= follow.user.id %>">
              <%= follow.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if follow.game.present? %>
            <a href="/bets/<%= follow.game.id %>">
              <%= follow.game.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if follow.bet_choice.present? %>
            <a href="/choices/<%= follow.bet_choice.id %>">
              <%= follow.bet_choice.scenario %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/follows/<%= follow.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == follow.user %>
            <a href="/follows/<%= follow.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_follow/<%= follow.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @follows, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
