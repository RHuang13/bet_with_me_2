<!-- Validation failure messages -->
<% if @bet.errors.any? %>
  <% @bet.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Bet #<%= @bet.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_bet/<%= @bet.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @bet.name %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @bet.description %></textarea>
      </div>

      <!-- Label and input for bet_size -->
      <div class="form-group">
        <label for="bet_size" class="control-label">
          Bet size
        </label>

        <input type="text" id="bet_size" name="bet_size" placeholder="Bet size" class="form-control" value="<%= @bet.bet_size %>">
      </div>

      <!-- Label and input for owner -->
      <div class="form-group">
        <label for="owner" class="control-label">
          Owner
        </label>

        <input type="text" id="owner" name="owner" placeholder="Owner" class="form-control" value="<%= @bet.owner %>">
      </div>

      <!-- Label and input for results -->
      <div class="form-group">
        <label for="results" class="control-label">
          Results
        </label>

        <input type="text" id="results" name="results" placeholder="Results" class="form-control" value="<%= @bet.results %>">
      </div>

      <button class="btn btn-warning">
        Update Bet
      </button>
      or
      <a href="/bets/<%= @bet.id %>">Cancel</a>
    </form>
  </div>
</div>
